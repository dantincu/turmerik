@page "/"

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>
<i class="bi bi-0-circle"></i>

Welcome to your new app.

<pre>
    @htmlStr
</pre>

@code {
    private string htmlStr { get; set; } = "asdf";

    protected override async void OnInitialized()
    {
        var httpClient = new HttpClient();

        try
        {
            htmlStr = await httpClient.GetStringAsync(new Uri("https://dummy.restapiexample.com/api/v1/employees"));
            StateHasChanged();
        }
        catch (Exception exc)
        {
        }
    }
}