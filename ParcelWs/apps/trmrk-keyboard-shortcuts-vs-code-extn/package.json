{
  "name": "trmrk-keyboard-shortcuts-vs-code-extn",
  "displayName": "Trmrk Keyboard Shortcuts VS Code Extension",
  "description": "An extension to add a keyboard shortcut for minimizing the VS Code window.",
  "version": "0.0.1",
  "publisher": "Daniel Tincu",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.minimizeWindow",
        "title": "Minimize Window"
      }
    ],
    "keybindings": [
      {
        "command": "extension.minimizeWindow",
        "key": "ctrl+shift+m",
        "when": "editorTextFocus"
      }
    ]
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/vscode": "^1.80.0",
    "@vscode/test-electron": "^2.3.0",
    "typescript": "^5.0.0"
  }
}
